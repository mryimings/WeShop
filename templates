templates

# template of signup request sent from frontend to backend
{
	"type":"signup",
	"info":{
		"userId": "Simon",
		"password": "abc123",
		"email": "simon@gmail.com",
		"phone": "1234567890"
	}
}

# template of succeeded signup sent from backend to frontend
{
	'status': 'success',
	'message': 'signup succeeded'
}

# template of failed signup sent from backend to frontend
{
	'status': failed',
	'message': 'user already exists'
}

# template of login request send from frontend to backend
{	
	"type": "login",
	"info": {
		"userId": "Simon",
		"password": "abc123"
	}
}

# template of add friend request from frontend to backend
# in this case, Yaoshi send friend request to Yiwei
{	
	"type": "add_friend",
	"info":{
		"user1": "Yaoshi",
		"user2": "Yiwei"
	}
}

# template of user2 agrees to become friend of user1
{
	"type": "add_friend_agree",
	"info":{
		"user1": "Smitha",
		"user2": "Yiming"
	}
}

# template of user2 declines to become friend of user1
{
	"type": "add_friend_decline",
	"info":{
		"user1": "Smitha",
		"user2": "Yiming"
	}
}
	
